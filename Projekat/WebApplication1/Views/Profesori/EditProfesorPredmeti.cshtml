@model WebApplication1.Models.ProfesorPredmetiModel

<h2>Uredi predmete koje predaje profesor: @Model.ImePrezime</h2>

<form asp-controller="Profesor" asp-action="EditProfesorPredmeti" method="post">


    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ProfesorId" />

    @* Prikaži eventualne greške *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@e.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="mb-4">
        @for (int i = 0; i < Model.Predmeti.Count; i++)
        {
            <div class="form-check mb-2">
                <input type="hidden" asp-for="Predmeti[@i].PredmetID" />
                <input type="hidden" asp-for="Predmeti[@i].ImePredmeta" />

                <input asp-for="Predmeti[@i].IsSelected"
                       class="form-check-input"
                       type="checkbox"
                       id="predmet_@i" />

                <label class="form-check-label" for="predmet_@i">
                    @Model.Predmeti[i].ImePredmeta
                </label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Spremi promjene</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Otkaži</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
