@model List<WebApplication1.Models.PredmetIspitiRegistracijaViewModel>

@{
    ViewData["Title"] = "Moji Predmeti";
}

<div class="container py-4">
    <h2 class="text-white mb-4">Moji Predmeti</h2>

    @foreach (var p in Model)
    {
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="text-white mb-0">@p.ImePredmeta (@p.BrojECTS ECTS)</h3>
                <a asp-action="DodajIspit"
                   asp-controller="Profesor"
                   asp-route-predmetId="@p.PredmetID"
                   class="btn btn-sm btn-success">
                    Dodaj ispit
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th class="text-white">Datum ispita</th>
                            <th class="text-white">Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var isp in p.Ispiti)
                        {
                            <!-- Glavni red za ispit -->
                            <tr>
                                <td class="text-white">
                                    @isp.Datum.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    <form asp-action="ZavrsiIspit"
                                          asp-controller="Profesor"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="ispitId" value="@isp.IspitId" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Završi ispit
                                        </button>
                                    </form>
                                </td>
                            </tr>

                            <!-- Red za prijavljene studente -->
                            <tr class="bg-dark">
                                <td colspan="2" class="text-white">
                                    <strong>Prijavljeni studenti:</strong>
                                    @if (!isp.PrijavljeniStudenti.Any())
                                    {
                                        <span class="ms-2"><em>Nitko nije prijavljen</em></span>
                                    }
                                    else
                                    {
                                        <ul class="mb-0 ms-3">
                                            @foreach (var s in isp.PrijavljeniStudenti)

                                            {
                                                <li>@s.Ime @s.Prezime (@s.Email)</li>
                                            }
                                        </ul>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
