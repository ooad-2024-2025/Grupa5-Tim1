@model IEnumerable<WebApplication1.Models.Predmet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImePredmeta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojECTS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semestar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImePredmeta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojECTS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestar)
            </td>
            <td>
                @if(User.IsInRole("Dekan")){
					<a asp-action="Edit" asp-route-id="@item.PredmetID">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.PredmetID">Delete</a>
                    }
                <a asp-action="Details" asp-route-id="@item.PredmetID">Details</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
